page{
  height: 100%;
}
.item{
  display: inline-block;
  width: 335rpx;
  margin: 10rpx 20rpx;
  vertical-align: top;
}
.item image{
  width: 100%;
  height: 500rpx;
  box-shadow: 0 0 10rpx #666;
}
.item text{
  display: block;
  text-align: center;
  font: 14px/1.5 "微软雅黑";
}
.loading{
  text-align: center;
  padding: 10rpx 0;
}